  <% @articles.reverse.each do |article| %>
    <div class="e-newsPost">
      <div  class="e-newsHeader">
        <div class="e-newsTitle"> <%= article.title %> </div>
        <div class="e-newsDate"> <%=article.created_at%></div>
      </div>
<div class="e-newsBody">
 <% qw=0 %>   
  <% par =article.text.split("<br>")[0] %>
     <p>
	<% par.split("<pic>").each do |m_par| %>
	  <%= m_par %>
          <%if article.pictures[qw]!= nil %>
 		<%=  image_tag article.pictures[qw].image.url(:thumb) %>
	  <%end%>
	  <% qw+=1 %>
        <%end%>
    </p>

      <a><%= link_to 'Новость целиком', article_path(article) %></a>
  </div>
 </div>
  <% end %>

