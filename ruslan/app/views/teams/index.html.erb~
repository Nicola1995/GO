<%if session[:lang] == 0
		@name = "Название команды";
		@teammates = "Участники";
		@status = "Статус";
		@accepted = "Подтверждено";
		@in_onserving = "Ещё не подтверждено";
	
	else
		@name = "Name of the team";
		@teammates = "Teammates";
		@status = "Status";
		@accepted = "Accepted";	
		@in_onserving = "In observing";
	end;%>

<div id="showteamsCont">
<table class="e-table">
<tr class="showteamsTableHead">
	<td class="showteamsTeamName"> <%=@name%> </td>
	<td class="showteamsTeamMates"> <%=@teammates%> </td>
	<td class="showteamsTeamStatus"> <%=@status%> </td>
	
		
</tr>
<%q = 1%>
 <% @teams.each do |team| %>
<%q = q%2+1%>
<tr class=<%="showteamsRow"+q.to_s %> >
	<td> <%=team.name_team%> </td>
	<td>	
	<%qw = 0%>	
	<%team.teammates.each do |tm|%>	
	  <%if tm.lastname != ""%>
	  	<%=tm.lastname %>
	  <%end%>
	  <%if tm.name != ""%>	 
	    <%=tm.name%> 
		<%if @teams[qw+1]!=nil && @teams[qw+1]!=""%>, <%end%>
	  <%end%>
	  <%qw=qw+1%>
	<%end%>
	</td>
	<td> <%if team.check%> 
		<im style = "color:green;"><%=@accepted%> </im> 
	     <%else%> 
		<im style = "color:red;"> <%=@in_onserving%> </im>
	     <%end%> 
	</td>
</tr>
  <% end %>
</table>
</div>
