
<%= form_for @team, url: {action: "create"} do |f| %>
		
 <p>
    <%= f.label :Название %><br>
    <%= f.text_field :name_team %>
  </p>


<p> менеджер </p> 
  <%= f.fields_for @team.manager do |ct| %>
    <p>
      <%= ct.label :ФИО %><br>
      <%= ct.text_field :name %>
    </p>
    <p>
      <%= ct.label :университет %><br>
      <%= ct.text_field :univercity %>
    </p>
    <p>
      <%= ct.label :контакты %><br>
      <%= ct.text_field :kontakts %>
    </p>
    <p>
	<%= ct.label :должность %><br>	
	<%= ct.select(:position, options_for_select([['ректор','ректор'], ['студент','студент'],['преподаватель','преподаватель']])) %>
    </p>
   <% end %>

 
<%q=0%>
<%@team.teammates.each do |tm|%>
<p> игрок <%=q%></p>
<%q=q+1%> 
  <%= f.fields_for tm, index: tm.id do |ct| %>
    <p>
      <%= ct.label :ФИО %><br>
      <%= ct.text_field :name %>
    </p>
    <p>
      <%= ct.label :рейтинг %><br>
      <%= ct.text_field :level %>
    </p>
   <% end %>
<%end%>


 <p>
    <%= f.submit %>
  </p>
<%end%>
