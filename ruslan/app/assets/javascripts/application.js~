var playerNum = 0;
var pId = ["player1","player2", 'player3', 'player4', 'player5', 'player6'];

function addPlayer()
{
	if (playerNum < 6) {
		playerNum++;
		var el = document.getElementById(pId[playerNum - 1]);
		el.style.display = 'block';	
	}
}

